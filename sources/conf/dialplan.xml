
<extension name="sfwhisper">
  <condition field="destination_number" expression="^(3222)$">
    <action application="answer"/>
    <action application="play_and_detect_speech" data="/tmp/test2.wav detect:sfwhisper {lang=ru,xx=yy,zz=111}"/>
    <action application="sleep" data="10000"/>
    <action application="hangup"/>
 </condition>
</extension>
